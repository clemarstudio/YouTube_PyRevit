<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vertical Splitter 2.0" Height="500" Width="300" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Step 1: Pick Columns/Walls" 
                Height="35" Click="pick_elements_click"/>
        
        <TextBlock x:Name="lbl_status" Grid.Row="1" 
                   Text="0 elements selected" 
                   Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,15"/>

        <TextBlock Grid.Row="2" Text="Step 2: Select Splitting Levels" FontWeight="Bold" Margin="0,0,0,5"/>
        
        <CheckBox x:Name="chk_select_all" Grid.Row="3" Content="Select All Levels" 
                  Margin="0,0,0,5" Click="select_all_click"/>

        <ListBox x:Name="lb_levels" Grid.Row="4" SelectionMode="Extended">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button x:Name="btn_split" Grid.Row="5" Content="SPLIT ELEMENTS" 
                Height="45" Margin="0,15,0,0" 
                Background="#3498db" Foreground="White" FontWeight="Bold"
                Click="split_click"/>
    </Grid>
</Window>